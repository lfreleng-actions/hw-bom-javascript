{
  "name": "hw-bom-javascript",
  "version": "1.0.0",
  "description": "Create a Hardware Bill of Materials (BOM) from a GitHub Actions workflow run",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "check-all": "concurrently \"npm:format-check\" \"npm:lint\" \"npm:test\" \"npm:build\"",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint **/*.ts",
    "test": "jest --testTimeout 10000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lfreleng-actions/hw-bom-javascript.git"
  },
  "keywords": [
    "Actions",
    "GitHub",
    "BOM",
    "Hardware",
    "Bill of Materials"
  ],
  "author": "Jordan Conway",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/lfreleng-actions/hw-bom-javascript/issues"
  },
  "homepage": "https://github.com/lfreleng-actions/hw-bom-javascript#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@opentelemetry/exporter-logs-otlp-http": "^0.202.0",
    "@opentelemetry/instrumentation-bunyan": "^0.48.0",
    "@opentelemetry/resources": "^2.0.0",
    "@opentelemetry/sdk-logs": "^0.202.0",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/semantic-conventions": "^1.32.0",
    "@types/bunyan": "^1.8.11",
    "bunyan": "^1.8.15"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@eslint/compat": "^1.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@vercel/ncc": "^0.38.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.5.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "tsconfigRootDir": "./"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
